# ============================================
# Production Environment Variables
# ============================================
# These should be set in your CI/CD or hosting provider

# PostgreSQL (Neon)
POSTGRES_USER=your_neon_user
POSTGRES_PASSWORD=your_neon_password
POSTGRES_DB=your_neon_database
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/database?sslmode=require

# Redis (Upstash)
REDIS_PASSWORD=your_upstash_password
REDIS_URL=rediss://default:your_password@your-upstash-host.upstash.io:6379

# Auth & Security (Generate secure random strings)
JWT_SECRET=generate_a_secure_random_string_min_32_characters
AUTH_SECRET=generate_a_secure_random_string_min_32_characters
NEXTAUTH_SECRET=generate_a_secure_random_string_min_32_characters

# URLs (Update with your actual domains)
NEXTAUTH_URL=https://your-frontend-domain.vercel.app
NEXT_PUBLIC_API_URL=https://your-backend-domain.fly.dev
CORS_ORIGIN=https://your-frontend-domain.vercel.app
